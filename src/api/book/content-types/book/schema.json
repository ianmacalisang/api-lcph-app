{
  "kind": "collectionType",
  "collectionName": "books",
  "info": {
    "singularName": "book",
    "pluralName": "books",
    "displayName": "Books",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "tags": {
      "type": "enumeration",
      "enum": [
        "promotions",
        "ebook"
      ],
      "default": "ebook"
    },
    "description": {
      "type": "richtext"
    },
    "thumbnail": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "file": {
      "type": "string"
    },
    "price": {
      "type": "decimal",
      "default": 0
    },
    "reviews": {
      "type": "component",
      "repeatable": true,
      "component": "frontend.reviews"
    }
  }
}
